<div class="<%= 'code-unavaiable' if (@code.nil? || !@code.available?) %>">
	<%= root_url + @code.code if @code %>
</div>
<%= @code.remaining_time.strftime "%H:%M:%S" if !@code.nil?%>
<%= form_for :new_code, url: new_code_url do |f| %>
	<%= f.submit 'new recruit code', :class => 'submit-button' %>
<% end %>

<div class="tree">
	<ul>
		<li>
			<a><%= if @user.parent then @user.parent.name else 'self' end %></a>
			<ul>
				<li>
					<a><%= @user.name %></a>
					<%= draw_tree @user%>
				</li>
			</ul>
		</li>
	</ul>
</div>
